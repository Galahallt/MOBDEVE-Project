<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/clGameOver"
                                                   android:background="#202735">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game Over!"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/tvGameOver" android:textColor="#FFFFFF"
            android:textSize="64sp"
            app:layout_constraintHorizontal_bias="0.493" android:fontFamily="@font/roboto_black"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="96dp"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/reload"
            app:backgroundTint="#363D49"
            app:tint="#9B9FA4"
            android:id="@+id/ibRetry"
            android:adjustViewBounds="true"
            android:padding="12dp" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="108dp"
            android:layout_marginStart="96dp" android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/rvGameOver"/>
    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/home"
            app:backgroundTint="#363D49"
            app:tint="#9B9FA4"
            android:id="@+id/ibGameOverHome"
            android:adjustViewBounds="true"
            android:padding="12dp" android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="108dp"
            app:layout_constraintStart_toEndOf="@+id/ibRetry" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" app:layout_constraintTop_toBottomOf="@+id/rvGameOver"
    />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="338dp"
            android:layout_height="286dp"
            app:layout_constraintTop_toBottomOf="@+id/tvGameOver" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
            app:layout_constraintHorizontal_bias="0.493" android:id="@+id/rvGameOver"/>
</androidx.constraintlayout.widget.ConstraintLayout>