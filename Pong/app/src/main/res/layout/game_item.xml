<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              app:layoutDescription="@xml/game_item_scene" android:orientation="vertical" android:id="@+id/llGameItem"
              android:background="@drawable/item">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/clItem"
            android:layout_weight="1">

        <TextView
                android:text="08/21/2021"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvGameItemDate"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp" android:textSize="24sp"
                android:fontFamily="@font/roboto" android:textColor="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/divider5"/>
        <TextView
                android:text="53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tvGameItemScore"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="24sp"
                android:fontFamily="@font/roboto"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/divider5" android:layout_marginStart="150dp"
                app:layout_constraintStart_toEndOf="@+id/tvGameItemDate"
        />
        <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>