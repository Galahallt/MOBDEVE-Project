<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/clLeaderboardsProfile" android:background="#202735">

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/arrow"
            app:backgroundTint="#363D49"
            app:tint="#9B9FA4"
            android:id="@+id/ibProfileBack"
            android:adjustViewBounds="true"
            android:padding="12dp" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="Username's Page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvProfileUsername"
            android:textSize="32sp" android:textColor="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_black"/>
    <TextView
            android:text="Total Games:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvProfileTotalGames"
            android:textSize="32sp" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="44dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileUsername" android:layout_marginTop="52dp"
            android:fontFamily="@font/roboto_medium"/>
    <TextView
            android:text="142"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvTotalGames"
            app:layout_constraintStart_toEndOf="@+id/tvProfileTotalGames"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileUsername" android:layout_marginTop="52dp"
            android:layout_marginStart="80dp" android:textSize="32sp" android:textColor="#FFFFFF"
            android:fontFamily="@font/roboto"/>
    <TextView
            android:text="Match History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvProfileHistory"
            android:textSize="32sp" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileTotalGames" android:layout_marginTop="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_bold"/>
    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvProfileDate"
            android:textSize="32sp" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileHistory" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toStartOf="@+id/tvProfileScore" app:layout_constraintHorizontal_bias="0.343"
            android:fontFamily="@font/roboto_medium"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="336dp"
            android:layout_height="284dp"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileHistory"
            android:layout_marginTop="84dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.493" app:layout_constraintVertical_bias="0.09"/>
    <TextView
            android:text="Hi-Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvProfileScore"
            android:textSize="32sp" android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvProfileHistory" android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.821"
            android:fontFamily="@font/roboto_medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>